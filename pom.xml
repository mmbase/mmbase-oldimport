                <version>${umlgraph.version}</version>
              </docletArtifact>
              <usestandardparameters>true</usestandardparameters>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>org.umlgraph</groupId>
