<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="newslettercontent" destination="newslettertheme" minoccurs="0" maxoccurs="*">
	<title xml:lang="nl">Nieuwsbriefthema selecteren</title>
	<title xml:lang="en">Newslettertheme selection</title>

	<item>
		<field name="title" ftype="data">
			<prompt xml:lang="en">Theme</prompt>
			<prompt xml:lang="nl">Thema</prompt>
		</field>
	</item>


	<command name="search" nodepath="newslettertheme" age="-1" fields="title">
		<prompt xml:lang="en">Search newslettertheme</prompt>
		<prompt xml:lang="nl">Zoek nieuwsbriefthema</prompt>
		<search-filter>
			<name xml:lang="en">Title contains</name>
			<name xml:lang="nl">Titel bevat</name>
			<search-fields>[title]</search-fields>
		</search-filter>
	</command>


	<action type="create">
		<relation destinationtype="newslettertheme" role="newslettercontent">
			<object type="newslettertheme"></object>
		</relation>
	</action>

	<action type="delete" />
</list>