<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="newslettertheme" destination="newslettertheme" minoccurs="0" maxoccurs="*">
	<title xml:lang="nl">Nieuwsbriefthema</title>
	<title xml:lang="en">Newsletter theme</title>

	<action include="config/newslettertheme/load_newslettertheme.xml"/>
	<item>
		<field name="title" dtmaxlength="100">
			<prompt xml:lang="en">Subject</prompt>
			<prompt xml:lang="nl">Onderwerp</prompt>
		</field>
		<field name="shortdescription" dtmaxlength="100">
			<prompt xml:lang="en">Short description</prompt>
			<prompt xml:lang="nl">Korte omschrijving</prompt>
		</field>
		<field name="description" dtmaxlength="1024">
			<prompt xml:lang="en">Description</prompt>
			<prompt xml:lang="nl">Omschrijving</prompt>
		</field>
	</item>


	<command name="search" nodepath="newslettertheme" age="-1" fields="title">
		<prompt xml:lang="en">Search newslettertheme</prompt>
		<prompt xml:lang="nl">Zoek nieuwsbriefthema</prompt>
		<search-filter>
			<name xml:lang="en">Title contains</name>
			<name xml:lang="nl">Titel bevat</name>
			<search-fields>[title]</search-fields>
		</search-filter>
	</command>



	<command name="insert" objectnumber="new">
		<prompt xml:lang="en">New</prompt>
		<prompt xml:lang="nl">Nieuw</prompt>
	</command>

	<action type="create">
		<relation destinationtype="newslettertheme" role="newslettertheme">
			<object type="newslettertheme"></object>
		</relation>
	</action>

	<action type="delete" />
</list>