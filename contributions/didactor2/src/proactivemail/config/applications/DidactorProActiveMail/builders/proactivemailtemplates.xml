<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="proactivemailtemplates" maintainer="didactor.nl" version="1" extends="object">
  <status>active</status>

  <classfile>nl.didactor.builders.ProActiveMailTemplateBuilder</classfile>
  <searchage>1000</searchage>

  <names>
    <!-- singles per language as defined by ISO 639 -->
    <singular xml:lang="en">Template</singular>
    <singular xml:lang="nl">Sjabloon</singular>
  
    <!-- multiple per language as defined by ISO 639 -->
    <plural xml:lang="en">Templates</plural>
    <plural xml:lang="nl">Sjabloons</plural>
  </names>

  <descriptions>
    <!-- descriptions per language as defined by ISO 639  -->
    <description xml:lang="en">ProActiveMail Template</description>
    <description xml:lang="nl">ProActiefMail Sjabloon</description>
  </descriptions>

  <fieldlist>
    
    <!-- POS 3 : <field> 'name'  -->
    <field>
      <descriptions>
        <!-- descriptions per language as defined by ISO 639  -->
        <description xml:lang="en">Name</description>
        <description xml:lang="nl">Naam</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="en">Name</guiname>
        <guiname xml:lang="nl">Naam</guiname>
        <guitype>string</guitype>
      </gui>
      <!-- editor related  -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>3</input>
          <!-- position in list area of the editor -->
          <list>3</list>
          <!-- position in search area of the editor -->
          <search>3</search>
        </positions>
      </editor>
      <!-- database related  -->
      <db>
        <!-- name of the field in the database -->
        <name>name</name>
        <!-- MMBase datatype and demands on it -->
        <type state="persistent" size="50" notnull="true" key="false">STRING</type>
      </db>
    </field>

    <!-- POS 4 : <field> 'from'  -->
    <field>
      <descriptions>
        <!-- descriptions per language as defined by ISO 639  -->
        <description xml:lang="en">From</description>
        <description xml:lang="nl">Van</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="en">From</guiname>
        <guiname xml:lang="nl">Van</guiname>
        <guitype>string</guitype>
      </gui>
      <!-- editor related  -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>4</input>
          <!-- position in list area of the editor -->
          <list>4</list>
          <!-- position in search area of the editor -->
          <search>4</search>
        </positions>
      </editor>
      <!-- database related  -->
      <db>
        <!-- name of the field in the database -->
        <name>frompart</name>
        <!-- MMBase datatype and demands on it -->
        <type state="persistent" size="100" notnull="true" key="false">STRING</type>
      </db>
    </field>
    
    <!-- POS 5 : <field> 'subject'  -->
    <field>
      <descriptions>
        <!-- descriptions per language as defined by ISO 639  -->
        <description xml:lang="en">Subject</description>
        <description xml:lang="nl">Onderwerp</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="en">Subject</guiname>
        <guiname xml:lang="nl">Onderwerp</guiname>
        <guitype>string</guitype>
      </gui>
      <!-- editor related  -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>5</input>
          <!-- position in list area of the editor -->
          <list>5</list>
          <!-- position in search area of the editor -->
          <search>5</search>
        </positions>
      </editor>
      <!-- database related  -->
      <db>
        <!-- name of the field in the database -->
        <name>subject</name>
        <!-- MMBase datatype and demands on it -->
        <type state="persistent" size="100" notnull="true" key="false">STRING</type>
      </db>
    </field>

    <!-- POS 6 : <field> 'body'  -->
    <field>
      <descriptions>
        <!-- descriptions per language as defined by ISO 639  -->
        <description xml:lang="en">Body</description>
        <description xml:lang="nl">Tekst</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="en">Body</guiname>
        <guiname xml:lang="nl">Tekst</guiname>  
        <guitype>field</guitype>
      </gui>
      <!-- editor related  -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>6</input>
          <!-- position in list area of the editor -->
          <list>6</list>
          <!-- position in search area of the editor -->
          <search>6</search>
        </positions>
      </editor>
      <!-- database related  -->
      <db>
        <!-- name of the field in the database -->
        <name>body</name>
        <!-- MMBase datatype and demands on it -->
        <type state="persistent" size="1024" notnull="true" key="false">STRING</type>
      </db>
    </field>
        
    <!-- POS 7 : <field> 'active'  -->
    <field>
      <descriptions>
        <!-- descriptions per language as defined by ISO 639  -->
        <description xml:lang="en">Active</description>
        <description xml:lang="nl">Map zichtbaar maken</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="en">Active</guiname>
        <guiname xml:lang="nl">Map zichtbaar maken</guiname>
        <guitype>integer</guitype>
      </gui>
      <!-- editor related  -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>7</input>
          <!-- position in list area of the editor -->
          <list>7</list>
          <!-- position in search area of the editor -->
          <search>7</search>
        </positions>
      </editor>
      <!-- database related  -->
      <db>
        <!-- name of the field in the database -->
        <name>active</name>
        <!-- MMBase datatype and demands on it -->
        <type state="persistent" notnull="false" key="false">INTEGER</type>
      </db>
    </field>

    <!-- POS 8 : <field> 'date' , mailing date if mail is to be sent only on specific date -->
    <field>
      <descriptions>
        <!-- descriptions per language as defined by ISO 639  -->
        <description xml:lang="en">Date</description>
        <description xml:lang="nl">Datum</description>
      </descriptions>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="en">Date</guiname>
        <guiname xml:lang="nl">Datum</guiname>
        <guitype>integer</guitype>
      </gui>
      <!-- editor related  -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>8</input>
          <!-- position in list area of the editor -->
          <list>8</list>
          <!-- position in search area of the editor -->
          <search>8</search>
        </positions>
      </editor>
      <!-- database related  -->
      <db>
        <!-- name of the field in the database -->
        <name>date</name>
        <!-- MMBase datatype and demands on it -->
        <type state="persistent" notnull="false" key="false">INTEGER</type>
      </db>
    </field>
    
 </fieldlist>
</builder>
