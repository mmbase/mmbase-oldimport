<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title xml:lang="nl">Nieuwsbericht Editor</title>
    <title xml:lang="en">Newsitem Editor</title>

    <action type="create">
      <object type="news">
      </object>
    </action>
    
    <action type="load">
    </action>

    <action type="delete" />
    
    <steps>
        <step form-schema="step1" />
    </steps>

    <form-schema id="step1">
        <title xml:lang="nl">Nieuwsbericht invoeren</title>
        <title xml:lang="en">Enter newsitem</title>
        <field name="title">
            <prompt xml:lang="nl">Titel</prompt>
            <prompt xml:lang="en">Title</prompt>
        </field>
        <field name="subtitle">
            <prompt xml:lang="nl">SubTitel</prompt>
            <prompt xml:lang="en">Subtitle</prompt>
        </field>
        <field name="intro">
            <prompt xml:lang="nl">Intro</prompt>
            <prompt xml:lang="en">Intro</prompt>
        </field>
        <field name="body">
            <prompt xml:lang="nl">Tekst</prompt>
            <prompt xml:lang="en">Text</prompt>
        </field>
    </form-schema>
</wizard-schema>
