<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="urlcategories" role="related" minoccurs="0" maxoccurs="*" ordertype="number">
    <title>Bijbehorende Informatiebron</title>
    <item>
        <field name="name" ftype="data">
            <prompt>Naam</prompt>
            <description>Naam van de Informatiebron</description>
        </field>
         <field wizardname="urlcategories" ftype="startwizard" />
   </item>

    <action type="create">
        <relation destinationtype="urlcategories" role="related" >
        </relation>
    </action>

    <command name="startwizard" inline="true" wizardname="urlcategories-noorigin" objectnumber="new" />

    <command name="search" nodepath="urlcategories" fields="name" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar Informatiebronnen</prompt>
        <search-filter>
            <name>Naam bevat</name>
            <search-fields>name</search-fields>
        </search-filter>
    </command>
</list>
