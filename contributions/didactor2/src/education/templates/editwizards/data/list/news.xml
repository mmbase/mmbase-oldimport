<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="news" role="related" minoccurs="0" maxoccurs="*" ordertype="number" orderby="field[@name='pos']">
    <title>Bijbehorende nieuwsberichten</title>
    <item>
        <field name="title" ftype="data">
            <prompt>Titel</prompt>
            <description>Titel van het nieuwsbericht</description>
        </field>
        <field fdatapath="field[@name='pos']"  ftype="line" />
   <field wizardname="news" ftype="startwizard" />
    </item>

    <action type="create">
        <relation destinationtype="news" role="related">
        </relation>
    </action>

    <command name="startwizard" inline="true" wizardname="news" objectnumber="new" />

    <command name="search" nodepath="news" fields="title" age="-1" orderby="number" directions="down" >
        <prompt>Zoeken naar nieuwsberichten</prompt>
        <search-filter>
            <name>Titel bevat</name>
            <search-fields>title</search-fields>
        </search-filter>
    </command>
</list>
