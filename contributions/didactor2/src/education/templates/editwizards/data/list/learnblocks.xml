<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="learnblocks" searchdir="destination" role="posrel" minoccurs="0" maxoccurs="*" ordertype="number" orderby="field[@name='pos']">
  <title>Bijbehorend Leerblok</title>
  <item>
    <field name="name" ftype="data">
      <prompt>Naam</prompt>
      <description>Naam van het leerblok</description>
    </field>
    <field fdatapath="field[@name='pos']"  ftype="line" />
    <field wizardname="learnblocks" ftype="startwizard" />
  </item>

  <action type="create">
    <relation role="posrel" destinationtype="learnblocks">
      <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
    </relation>
  </action>

  <command name="startwizard" inline="true" wizardname="learnblocks" objectnumber="new" />

  <command name="search" nodepath="learnblocks" fields="name" age="-1" orderby="number" directions="down">
    <prompt>Zoeken naar Leerblokken</prompt>
    <search-filter>
      <name>Naam bevat</name>
      <search-fields>name</search-fields>
    </search-filter>
  </command>
</list>
