<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
    <title>Rangorde vraag Editor</title>


    <action type="create">
       <object type="rankingquestions">
          <relation destination="$origin" role="posrel" createdir="source"/>
          <field name="showtitle">1</field>
          <field name="layout">0</field>
       </object>
    </action>


    <action type="load">
        <relation destination="rankinganswers" role="posrel" />
        <relation destination="images" role="related" />
        <relation destination="feedback" role="related" />
        <relation destination="metadata" role="related">
          <object type="metadata">
           <relation destination="metalangstring" role="posrel">
              <object type="metalangstring">
                <field name="number"/>
                <field name="language"/>
                <field name="value"/>
              </object>
            </relation>
           <relation destination="metadate" role="posrel">
              <object type="metadate">
                <field name="number"/>
                <field name="value"/>
              </object>
            </relation>
           <relation destination="metavocabulary" role="posrel">
              <object type="metavocabulary">
                <field name="number"/>
                <field name="value"/>
              </object>
            </relation>
            <relation destination="metadefinition" role="related">
              <object type="metadefinition">
                <relation destination="metavocabulary" role="related"/>
              </object>
            </relation>
            </object>
        </relation>
    </action>

    <action type="delete" />

    <lists>
       <optionlist include="option_lists/boolean.xml" />
    </lists>

    <steps>
        <step form-schema="step1" />
        <!-- step form-schema="step2" / -->

    </steps>

    <form-schema id="step1">
        <title>Rangorde vraag invoeren</title>
        <field name="title" >
            <prompt>Titel</prompt>
        </field>
         <field name="showtitle" ftype="enum">
           <prompt xml:lang="nl">Titel laten zien</prompt>
           <prompt xml:lang="en">Show title</prompt>
           <optionlist select="boolean" />
        </field> 
       <field name="text" ftype="html" dtminlength="0">
            <prompt>Tekst</prompt>
        </field>

        <list role="related" extends="list/images.xml" />
        <list minoccurs="0" maxoccurs="*" ordertype="number" orderby="field[@name='pos']" role="posrel" destination="rankinganswers">
            <title>Bijbehorende antwoorden</title>
            <item>
                <field name="text" ftype="data">
                    <prompt>Tekst</prompt>
                    <description>De antwoord tekst</description>
                </field>
                <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
                <field wizardname="rankinganswers" ftype="startwizard"/>
            </item>

            <!-- deze is voor de 'command name="insert"' -->
            <action type="create">
                 <relation role="posrel" destinationtype="rankinganswers">
                  <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true']/field[@name='pos'])+{$pos}}</field>
                </relation>
             </action>

            <!-- deze is voor de 'command name="search"'
            <action type="add">
                <relation role="posrel">
                    <object type="rankinganswers">
                        <field name="text"/>
                    </object>
                </relation>
            </action> -->

            <command name="search" nodepath="rankinganswers" fields="text" age="-1" orderby="number" directions="down">
                <prompt>Zoeken naar Antwoorden</prompt>
                <search-filter>
                    <name>Tekst bevat</name>
                    <search-fields>text</search-fields>
                </search-filter>
            </command>

            <command name="startwizard" inline="true" wizardname="rankinganswers" objectnumber="new">
                <prompt>Nieuwe Rangorde antwoord</prompt>
            </command>

        </list>
        <list role="related" extends="list/feedback.xml" />
    </form-schema>

    <form-schema id="step2">
        <title>Metadata invoeren</title>
        <list extends="list/metadatalangstring.xml"/>
        <list extends="list/metadatadate.xml"/>
        <list extends="list/metadatavocabulary.xml"/>
    </form-schema>

</wizard-schema>

