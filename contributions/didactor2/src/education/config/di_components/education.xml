<component
    xmlns="http://www.mmbase.org/xmlns/didactor-component"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/didactor-component
                        http://www.mmbase.org/xmlns/didactor-component.xsd"
    name="education" templatepath="" templatebar="" barposition="">

  <scope name="component" referid="component">
  </scope>
  <scope name="providers" referid="provider">
  </scope>
  <scope name="educations" referid="education">
    <setting name="max_depth" type="integer" default="15" canbeempty="false" />
    <setting name="background_image_template" type="string" default="" />
    <setting name="new_questiontypes" type="string" default="mcquestions,openquestions,rankingquestions,couplingquestions,hotspotquestions,valuequestions,dropquestions,fillquestions,fillselectquestions,opennumeralquestions,essayquestions,openvaluequestions" />

    <setting name="education_paragraphs" type="boolean" default="false" />
    <setting name="learnblocks_paragraphs" type="boolean" default="true" />
    <setting name="learnblocks_fields" type="string" default="name,showtitle,intro,layout,imagelayout" />
    <setting name="educations_fields" type="string" default="name,showtitle,provider,intro,layout,imagelayout,path" />
    <setting name="educations_lists"  type="string" default="image/sizedimages,news/news-list,attachment/attachments-posrel,audiotape/audiotapes-posrel,videotape/videotapes-posrel,url/urls-posrel" />


  </scope>

  <scope name="people" referid="user">
  </scope>
</component>
