<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list fdatapath="relation[@role='posrel']/object[@type='metavocabulary']/../../relation[@role='posrel']/object[@type='metavocabulary']"
      fparentdatapath="../object[@type='metadata']" minoccurs="0" maxoccurs="*" hidecommand="delete-item">
  <title>Bijbehorende Vocabulaire</title>
  <item>
    <field fdatapath="field[@name='value']" ftype="data">
      <prompt>Waarde</prompt>
    </field>
  </item>

  <action type="load">
        <relation destination="metavocabulary" role="posrel" />
        <relation destination="metadefinition" role="constraints" />
  </action>
  
  <action type="create">
    <relation destinationtype="metavocabulary" role="posrel">
      <object type="metavocabulary"></object>
    </relation>

    <relation destinationtype="metadefinition" role="constraints">
      <object type="metadefinition"></object>
    </relation>

  </action>

  <action type="delete"/>

  <action type="add">
    <relation destinationtype="metavocabulary" role="posrel">
    </relation>
    <relation destinationtype="metadefinition" role="constraints">
    </relation>
  </action>

  <command name="search" nodepath="metavocabulary" fields="value" age="-1" orderby="number" directions="down" >
    <prompt>Zoeken naar tekenreeksen</prompt>
    <search-filter>
      <name>Waarde bevat</name>
      <search-fields>value</search-fields>
    </search-filter>
  </command>
</list>