<!-- used in config/metastandard/metastandard.xml -->
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list destination="metastandard" role="posrel" minoccurs="0" maxoccurs="*" searchdir="destination" orderby="metastandard.name"> 

  <title xml:lang="en">Contained metastandards (for multilevel-metastandards)</title>
  <title xml:lang="nl">Sub-metadata standaarden (tbv multilevel-metastandaarden)</title>
  <item>
    <field name="name" ftype="data">
      <prompt>Naam</prompt>
    </field>
    <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>    
    <field ftype="startwizard" wizardname="config/metastandard/metastandard" />
  </item>

  <action type="create">
    <relation destinationtype="metastandard" role="posrel">
     </relation>
  </action>

  <!--
  <command name="startwizard" inline="true" wizardname="config/metadefinition/metadefinition" objectnumber="new" >
  </command>
  -->

  <command name="search" nodepath="metastandard" fields="name" age="-1" orderby="number" directions="down" >
    <prompt>Zoeken naar metastandard</prompt>
    <search-filter>
      <name>Naam bevat</name>
      <search-fields>name</search-fields>
    </search-filter>
    
  </command>
</list>
