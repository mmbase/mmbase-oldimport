<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application PUBLIC "-//MMBase//DTD application config 1.1//EN" "http://www.mmbase.org/dtd/application_1_1.dtd">
<application name="DidactorResources" maintainer="didactor.nl" version="2" auto-deploy="true">

  <requirements>
    <requires name="Resources" maintainer="mmbase.org" version="1" />
  </requirements>

  <neededbuilderlist>
    <builder maintainer="mmbase.org" version="0">icaches</builder>
    <builder maintainer="mmbase.org" version="0">images</builder>
    <builder maintainer="mmbase.org" version="0">urls</builder>
    <builder maintainer="mmbase.org" version="0">attachments</builder>
    <builder maintainer="mmbase.org" version="0">posrel</builder>
    <builder maintainer="mmbase.org" version="0">pools</builder>

    <builder maintainer="mmbase.org" version="0">descriptionrel</builder>
    <builder maintainer="mmbase.org" version="0">pdfs</builder>

    <!-- Extra regarding the original 'Resources' application -->
    <builder maintainer="mmbase.org" version="0">mmevents</builder>
    <builder maintainer="mmbase.org" version="0">audiotapes</builder>
    <builder maintainer="mmbase.org" version="0">videotapes</builder>
  </neededbuilderlist>

  <neededreldeflist>
    <reldef source="posrel"  target="posrel" direction="bidirectional" guisourcename="Posrel" guitargetname="Posrel" builder="posrel" />
  </neededreldeflist>

  <allowedrelationlist />

  <datasourcelist />

  <relationsourcelist />

  <contextsourcelist/>

  <description><![CDATA[Installs a few basic resources such as urls, attachments, images and the image cache.<br />
A few other applications depend on this application.<br />
For images and icaches, either JAI or Imagemagick is required, see the documentation
for more information about how to install one of these tools.]]></description>
  <install-notice><![CDATA[Urls, attachments, images and icaches installed.]]></install-notice>
</application>
