<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_contentelement">
	<title>Content element</title>
	<field name="creationdate" ftype="data">
		<prompt xml:lang="en">Creationdate</prompt>
		<prompt xml:lang="nl">Aangemaakt</prompt>
	</field>
	<field name="lastmodifieddate" ftype="data">
		<prompt xml:lang="en">Lastmodifieddate</prompt>
		<prompt xml:lang="nl">Gewijzigd</prompt>
	</field>
	<field name="publishdate">
		<prompt xml:lang="en">Publishdate</prompt>
		<prompt xml:lang="nl">Publicatie datum</prompt>
	</field>
	<field name="expiredate">
		<prompt xml:lang="en">Expiredate</prompt>
		<prompt xml:lang="nl">Verloopdatum</prompt>
	</field>
	<field name="creator" ftype="data">
		<prompt xml:lang="en">Creator</prompt>
		<prompt xml:lang="nl">Aangemaakt door</prompt>
	</field>
	<field name="lastmodifier" ftype="data">
		<prompt xml:lang="en">Lastmodifier</prompt>
		<prompt xml:lang="nl">Gewijzigd door</prompt>
	</field>
	<field name="use_expirydate" ftype="enum">
		<prompt xml:lang="en">Use expirydate</prompt>
		<prompt xml:lang="nl">Gebruik verloopdatum</prompt>
		<optionlist select="boolean" />
	</field>
	<field name="title" dtmaxlength="255" ftype="text">
		<prompt xml:lang="en">Title</prompt>
		<prompt xml:lang="nl">Titel</prompt>
	</field>
	<field name="description" dtmaxlength="1024" ftype="text" rows="3">
		<prompt xml:lang="en">Description</prompt>
		<prompt xml:lang="nl">Omschrijving</prompt>
	</field>
	<field name="source" dtmaxlength="255" ftype="text">
		<prompt xml:lang="en">Source</prompt>
		<prompt xml:lang="nl">Bronvermelding</prompt>
	</field>
	<field name="keywords" dtmaxlength="255" ftype="text">
		<prompt xml:lang="en">Keywords</prompt>
		<prompt xml:lang="nl">Trefwoorden</prompt>
	</field>
	<field name="editor_note" dtmaxlength="2048" ftype="text">
		<prompt xml:lang="en">Note</prompt>
		<prompt xml:lang="nl">Notitie</prompt>
	</field>
	<field name="notificationdate">
		<prompt xml:lang="en">Notificationdate</prompt>
		<prompt xml:lang="nl">Notificatie datum</prompt>
	</field>
	<field name="status">
		<prompt xml:lang="en">Status</prompt>
		<prompt xml:lang="nl">Status</prompt>
	</field>
	<list include="config/contentchannel/search_contentelement_creationrel_contentchannel.xml" />
