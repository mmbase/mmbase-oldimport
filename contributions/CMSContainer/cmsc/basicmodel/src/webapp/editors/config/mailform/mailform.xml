<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="mailform">
	<title xml:lang="nl">Mailformulier</title>
	<title xml:lang="en">Mailform</title>

   <action include="config/mailform/create_mailform.xml"/>
   <action include="config/mailform/delete_mailform.xml"/>
   <action include="config/mailform/load_mailform.xml"/>

   <lists include="config/option_lists/all_optionlists.xml"/>

   <steps>
      <step form-schema="edit_mailform"/>
      <step form-schema="edit_contentfields"/>
      <step form-schema="edit_contentinfo"/>
   </steps>
   <form-schema id="edit_mailform" extends="config/mailform/edit_mailform.xml"/>
   <form-schema id="edit_contentfields" extends="config/contentelement/edit_contentfields.xml"/>
   <form-schema id="edit_contentinfo" extends="config/contentelement/edit_contentinfo.xml"/>
</wizard-schema>
