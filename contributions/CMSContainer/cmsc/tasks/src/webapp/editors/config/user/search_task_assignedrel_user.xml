<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="assignedrel" destination="user" minoccurs="0" maxoccurs="1" >
   <title>user</title>
   <item>

      <field ftype="data" name="username"
      >
         <prompt> username </prompt>
      </field>

      <field ftype="data" name="surname"
      >
         <prompt> Achternaam </prompt>
      </field>

      <field ftype="data" name="firstname"
      >
         <prompt> Voornaam </prompt>
      </field>

      <field ftype="data" name="prefix"
      >
         <prompt> tussenvoegsel </prompt>
      </field>

      <field ftype="data" name="company"
      >
         <prompt> Bedrijf </prompt>
      </field>
      <field ftype="startwizard" wizardname="config/user/user" inline="true"/>
   </item>
   <command name="search" nodepath="user" age="-1" fields="username,surname,firstname,prefix,company">
      <prompt>Zoek user</prompt>
      <search-filter>
         <name> username bevat</name>
         <search-fields>[username]</search-fields>
      </search-filter>
      <search-filter>
         <name> Achternaam bevat</name>
         <search-fields>[surname]</search-fields>
      </search-filter>
      <search-filter>
         <name> Voornaam bevat</name>
         <search-fields>[firstname]</search-fields>
      </search-filter>
      <search-filter>
         <name> tussenvoegsel bevat</name>
         <search-fields>[prefix]</search-fields>
      </search-filter>
      <search-filter>
         <name> Bedrijf bevat</name>
         <search-fields>[company]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/user/user" objectnumber="new">
       <prompt>Nieuw</prompt>
   </command>

   <action type="create">
      <relation destinationtype="user" role="assignedrel">
      </relation>
   </action>
</list>