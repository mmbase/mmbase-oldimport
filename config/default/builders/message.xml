<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE builder PUBLIC "//MMBase - builder//" "http://www.mmbase.org/dtd/builder.dtd">
<builder>

<!-- <status>
	what is the status of this builder options : active or inactive
-->
<status>inactive</status>

<!-- <classfile>
	This is a optional tag, it names the classfile that allows you to add
	support routines or changes them on a per builder base. For example
	images has routines to image support etc etc.

	possible values : Dummy or disabled tag makes mmbase use the default setup

		short name : Urls will start class : org.mmbase.module.builders.Urls.class

		long name : nl.vpro.mmbase.module.builders.Urls will start that class
-->
<classfile>org.mmbase.module.builders.Message</classfile>

<searchage>7</searchage>

<!-- <names>
	names defines the different names used in user visible parts, singular for
	for talking about 1 object (Url,Person) and plurar for talking about multiple
	<Urls, people).
>-->
<names>
	<!-- singles per language  as defined by RFC xxx -->
	<singular xml:lang="us">Message</singular>
	<!-- multiple per language  as defined by RFC xxx -->
	<plural xml:lang="us">Messages</plural>
</names>

<!-- <descriptions>
	small description of the builder for human reading
-->
<descriptions>
<!-- descriptions per language  as defined by RFC xxx -->
	<description xml:lang="us">A message posted in a Community</description>
</descriptions>

<!-- <fieldlist>
	 defines the different fields in this object, be carefull the order is important
	once defined keep them in the same order.
	If you use number and owner (the 2 default fields, please check the docs for this)
-->
<fieldlist>
	<!-- POS 1 : <field> 'number' is a default field (see docs) -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="us">Object</guiname>
			<guitype>integer</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>10</list>
				<!-- position in search area of the editor -->
				<search>10</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>number</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" notnull="true" key="true">INTEGER</type>
		</db>
	</field>

	<!-- POS 2 : <field> 'owner' is a default field (see docs) -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="us">Owner</guiname>
			<guiname xml:lang="nl">Eigenaar</guiname>
			<guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>11</list>
				<!-- position in search area of the editor -->
				<search>11</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>owner</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="12" notnull="true">STRING</type>
		</db>
	</field>

	<!-- POS 3 : <field> 'subject'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="us">Subject</guiname>
			<guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>1</input>
				<!-- position in list area of the editor -->
				<list>1</list>
				<!-- position in search area of the editor -->
				<search>1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>subject</name>
			<!-- MMBase datatype and demands on it -->
			<!-- was varchar_ex -->
			<type state="persistent" size="255" notnull="false">STRING</type>
		</db>
	</field>

	<!-- POS 4 : <field> 'body'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="us">Body</guiname>
			<guitype>field</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>2</input>
				<!-- position in list area of the editor -->
				<list>-1</list>
				<!-- position in search area of the editor -->
				<search>2</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>body</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" notnull="true">STRING</type>
		</db>
	</field>

	<!-- POS 5 : <field> 'timestamp'
             Note that in eralier versions of message, the timestamp field was represented
             with two separate integer fields: 'timestampl' and 'timestamph'.
             If you have the message buidler active, do not replace you builder file (but adapt the old one).
             The code that uses timestamp supports both the old and the new format.
        -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="us">Timestamp</guiname>
			<guitype>long</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>4</list>
				<!-- position in search area of the editor -->
				<search>-1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>timestamp</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" notnull="true">LONG</type>
		</db>
	</field>

	<!-- POS 6 : <field> 'thread'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="us">Thread</guiname>
			<guitype>integer</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>3</list>
				<!-- position in search area of the editor -->
				<search>3</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>thread</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" notnull="false">INTEGER</type>
		</db>
	</field>

	<!-- POS 7 : <field> 'sequence'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="us">Volgordenr</guiname>
			<guitype>integer</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>3</input>
				<!-- position in list area of the editor -->
				<list>2</list>
				<!-- position in search area of the editor -->
				<search>-1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>sequence</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" notnull="true">INTEGER</type>
		</db>
	</field>

	<!-- POS 8 : <field> 'info'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="us">Info</guiname>
			<guitype>field</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>-1</input>
				<!-- position in list area of the editor -->
				<list>-1</list>
				<!-- position in search area of the editor -->
				<search>-1</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>info</name>
			<!-- MMBase datatype and demands on it -->
			<!-- was text -->
			<type state="persistent" size="512" notnull="false">STRING</type>
		</db>
	</field>

</fieldlist>

</builder>

