<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "//MMBase - builder//" "http://www.mmbase.org/dtd/builder.dtd">
<builder maintainer="mmbase.org" version="0" extends="object">

	<classfile>org.mmbase.module.corebuilders.OAlias</classfile>

	<searchage>31</searchage>

	<!-- <names>
	names defines the different names used in user visible parts, singular for
	for talking about 1 object (Url,Person) and plurar for talking about multiple
	<Urls, people).
	>-->
	<names>
		<!-- singles per language as defined by ISO 639 -->
		<singular xml:lang="nl">Object Alias</singular>
		<singular xml:lang="en">OAlias</singular>
		<singular xml:lang="us">OAlias</singular>
		<singular xml:lang="eo">Objektkromnomo</singular>
		<!-- multiple per language as defined by ISO 639 -->
		<plural xml:lang="nl">Object Aliases</plural>
		<plural xml:lang="en">OAlias</plural>
		<plural xml:lang="us">OAlias</plural>
		<plural xml:lang="eo">Objektkromnomoj</plural>
	</names>

	<!-- <descriptions>
	small description of the builder for human reading
	-->
	<descriptions>
		<!-- descriptions per language as defined by ISO 639  -->
		<description xml:lang="nl">Object Aliases naam substitutie voor objecten</description>
		<description xml:lang="us">Object Aliases name substitution for objects</description>
		<description xml:lang="eo">Per objektkromnomoj eble doni nomojn al objektoj</description>
	</descriptions>

	<!-- <fieldlist>
	defines the different fields in this object, be carefull the order is important
	once defined keep them in the same order.
	If you use number and owner (the 2 default fields, please check the docs for this)
	-->
	<fieldlist>
		<!-- POS 3 : <field> 'name'  -->
		<field>
			<!-- gui related -->
			<gui>
				<guiname xml:lang="nl">Naam</guiname>
				<guiname xml:lang="us">Name</guiname>
				<guiname xml:lang="eo">Nomo</guiname>
				<guitype>string</guitype>
			</gui>
			<!-- editor related  -->
			<editor>
				<positions>
					<!-- position in the input area of the editor -->
					<input>1</input>
					<!-- position in list area of the editor -->
					<list>1</list>
					<!-- position in search area of the editor -->
					<search>1</search>
				</positions>
			</editor>
			<!-- database related  -->
			<db>
				<!-- name of the field in the database -->
				<name>name</name>
				<!-- MMBase datatype and demands on it -->
				<type state="persistent" size="64" notnull="true" key="false">STRING</type>
			</db>
		</field>

		<!-- POS 4 : <field> 'description'  -->
		<field>
			<!-- gui related -->
			<gui>
				<guiname xml:lang="nl">Omschrijving</guiname>
				<guiname xml:lang="us">Description</guiname>
				<guiname xml:lang="eo">Priskribo</guiname>
				<guitype>field</guitype>
			</gui>
			<!-- editor related  -->
			<editor>
				<positions>
					<!-- position in the input area of the editor -->
					<input>2</input>
					<!-- position in list area of the editor -->
					<list>2</list>
					<!-- position in search area of the editor -->
					<search>2</search>
				</positions>
			</editor>
			<!-- database related  -->
			<db>
				<!-- name of the field in the database -->
				<name>description</name>
				<!-- MMBase datatype and demands on it -->
				<type state="persistent" size="128" notnull="true" key="false">STRING</type>
			</db>
		</field>

		<!-- POS 5 : <field> 'destination'  -->
		<field>
			<!-- gui related -->
			<gui>
				<guiname xml:lang="nl">Bestemming</guiname>
				<guiname xml:lang="us">Target</guiname>
				<guiname xml:lang="eo">Celo</guiname>
				<guitype>integer</guitype>
			</gui>
			<!-- editor related  -->
			<editor>
				<positions>
					<!-- position in the input area of the editor -->
					<input>3</input>
					<!-- position in list area of the editor -->
					<list>3</list>
					<!-- position in search area of the editor -->
					<search>3</search>
				</positions>
			</editor>
			<!-- database related  -->
			<db>
				<!-- name of the field in the database -->
				<name>destination</name>
				<!-- MMBase datatype and demands on it -->
				<type state="persistent" notnull="true" key="false">INTEGER</type>
			</db>
		</field>

	</fieldlist>

</builder>

