<?xml version="1.0"?>
<!DOCTYPE project
 [ <!ENTITY base     SYSTEM "../buildbase.xml" > ]
>

<project name="XMLImporter" default="dependent.jar" basedir=".">
  <property name="project.name"     value="xmlimporter" />
  <property name="project.package"   value="org/mmbase/applications/xmlimporter" />
  <property name="project.target.templates.dir"   value="xmlimporter" />
  <property name="project.jars.includes" value="scan/build/mmbase-scan.jar" />
  &base;

  <target name="scan">
    <echo message="${applications.dir}/scan" />
    <ant dir="${applications.dir}/scan" inheritAll="false" />
  </target>

  <target name="dependent.jar" depends="scan,jar" />

  <target name="dependent.package" depends="dependent.jar,package" />

  <target name="dependent.install" depends="dependent.jar,install" />

</project>



