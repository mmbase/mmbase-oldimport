<?xml version="1.0" ?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder
                        http://www.mmbase.org/xmlns/builder.xsd"
    name="mediafragments"  maintainer="mediaproject.mmbase.org" version="0" extends="object">

  <class>org.mmbase.applications.media.builders.MediaFragments</class>
  <names>
    <singular xml:lang="nl">Mediafragment</singular>
    <singular xml:lang="en">Media fragment</singular>

    <plural xml:lang="nl">Mediafragmenten</plural>
    <plural xml:lang="en">Media fragments</plural>
  </names>

  <descriptions>
    <description xml:lang="nl">Een Media Fragment beschrijft een stukje media.</description>
    <description xml:lang="en">A Media Fragment describes one piece of media.</description>
  </descriptions>


  <properties>
    <property name="org.mmbase.media.containedtype">mediasources</property>
  </properties>


  <xi:include href="http://www.mmbase.org/builders/media/mediafragments.fields.xml" />
  <xi:include href="http://www.mmbase.org/builders/media/mediafragments.auxiliary.fields.xml" />


</builder>
