<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder name="mediaproviders" extends="object">
	
  <status>active</status>
  
  <classfile>org.mmbase.applications.media.builders.MediaProviders</classfile>

  <names>
    <singular xml:lang="en">Media provider</singular>
    <singular xml:lang="nl">Mediaprovider</singular>
    <plural xml:lang="en">Media providers</plural>
    <plural xml:lang="nl">Mediaproviders</plural>
  </names>

  <descriptions>
    <description xml:lang="en">Describes the system that is providing media files.</description>
    <description xml:lang="nl">Beschrijft het systeem dat mediabestanden beschikbaar stelt.</description>
  </descriptions>

  <properties>
    <property name="URLComposerFactory">org.mmbase.applications.media.urlcomposers.URLComposerFactory</property>
  </properties>
  <fieldlist>
    <field>
      <descriptions>
        <description xml:lang="en">
          An name for this provider, which can be used as an identifier to the user.
        </description>
        <description xml:lang="nl">
          Naam van deze media-server.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Name</guiname>
        <guiname xml:lang="nl">Naam</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>1</input> <list>1</list> <search>1</search>
        </positions>
      </editor>

      <db>
        <name>name</name>
        <type state="persistent" size="40" notnull="true">STRING</type>
      </db>
    </field>
    
    <field>
      <descriptions>
        <description xml:lang="en">
          The root-url is in fact the servername of the provider which serves the stream.
        </description>
        <description xml:lang="nl">
          De naam van deze media-server.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Host name</guiname>
        <guiname xml:lang="nl">Hostname</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>2</input><list>2</list><search>2</search>
        </positions>
      </editor>
      <db>
        <name>host</name>
        <type state="persistent" size="200" notnull="false">STRING</type>
      </db>
    </field>
    
    <field>
      <descriptions>
        <description xml:lang="en">
          State of this media-provider. Online/offline.
        </description>
        <description xml:lang="nl">
          Status van deze media-server. Online/offline.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">State</guiname>
        <guiname xml:lang="nl">Toestand</guiname>
        <guitype>org.mmbase.applications.media.builders.resources.providerstates</guitype>
      </gui>
      <editor>
        <positions>
          <input>3</input> <list>3</list> <search>3</search>
        </positions>
      </editor>
      <db>
        <name>state</name>
        <type state="persistent" notnull="false">INTEGER</type>
      </db>
    </field>

    <field>
      <descriptions>
        <description xml:lang="en">
          Description of this provider.
        </description>
        <description xml:lang="nl">
          Beschrijving van deze provider.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Description</guiname>
        <guiname xml:lang="nl">Beschrijving</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>5</input><list>5</list><search>-1</search>
        </positions>
      </editor>
      <db>
        <name>description</name>
        <type state="persistent" size="300" notnull="false">STRING</type>
      </db>
    </field>
    <field>
      <descriptions>
        <description xml:lang="en">
          Protocol: http, ftp, rtsp etc.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Protocol</guiname>
        <guiname xml:lang="nl">Protokol</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>1</input> <list>1</list><search>1</search>
        </positions>
      </editor>
      <db>
        <name>protocol</name>
        <type state="persistent" size="255" notnull="false">STRING</type>
      </db>
    </field> 

    <field>
      <descriptions>
        <description xml:lang="en">
          First part of the path on the server. This is if often the
          same for many streams.
        </description>
        <description xml:lang="nl">
          Eerste stuk van het path.
        </description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">RootPath</guiname>
        <guiname xml:lang="nl">HoofdPad</guiname>
        <guitype>string</guitype>
      </gui>
      <editor>
        <positions>
          <input>2</input> <list>2</list><search>2</search>
        </positions>
      </editor>
      <db>
        <name>rootpath</name>
        <type state="persistent" size="255" notnull="false">STRING</type>
      </db>
    </field>

  </fieldlist>
</builder>
